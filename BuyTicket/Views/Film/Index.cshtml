@model IEnumerable<BuyTicket.Models.Film>

@{
    ViewData["Title"] = "Filmler";
}

<h1>FİLMLER</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-dark">Yeni Film Ekle</a>
</p>
<table class="table">
    <thead>
        <tr class="text-center">
            <th>
                @Html.DisplayNameFor(model => model.FilmAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FilmHakkinda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FilmBaslamaSaati1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FilmBaslamaSaati2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FilmBaslamaSaati3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FilmFotografi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FilmKategorisi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FilmUcreti)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sinema)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Yonetmen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="text-center">
            <td  class="font-weight-bold">
                @Html.DisplayFor(modelItem => item.FilmAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FilmHakkinda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FilmBaslamaSaati1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FilmBaslamaSaati2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FilmBaslamaSaati3)
            </td>
            <td>
                <img src="@item.FilmFotografi" asp-append-version="true" style="width:200px; height:200px;">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FilmKategorisi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FilmUcreti)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sinema.SinemaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Yonetmen.YonetmenId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FilmId" class="btn btn-secondary btn-block">Düzenle</a>
                <br />
                <a asp-action="Details" asp-route-id="@item.FilmId" class="btn btn-info btn-block">Detaylar</a>
                <br />
                <a asp-action="Delete" asp-route-id="@item.FilmId" class="btn btn-dark btn-block">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
