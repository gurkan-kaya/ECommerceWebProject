@model IEnumerable<BuyTicket.Models.Film>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    ViewData["Title"] = "Filmler";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6 col-xs-12 mb-3" style="display: flex; flex-direction: row; align-items: stretch;">
            <div class="card mb-3">
                <div class="row ">
                    <div class="col-md-12">

                        <div class="card-header text-white bg-dark">
                            <p class="card-text">
                                <h3 class="card-title text-center">
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                    {<a class=" btn btn-outline-secondary text-white float-left" style="font-size:large" asp-action="Edit" asp-route-id="@item.FilmId">@localizer["duzenle"]</a>}
                                    @item.FilmAdi
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                    {<a class="btn btn-outline-secondary text-white float-right" style="font-size:large" asp-action="Delete" asp-route-id="@item.FilmId">@localizer["sil"]</a>}
                                </h3>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card-body">
                            <p class="card-text rounded" style="background-color: whitesmoke;"><b>@localizer["FilmHakkinda"]: </b>@item.FilmHakkinda.Substring(0, 100) ...</p>
                            <p class="card-text rounded" style="background-color:whitesmoke;"><b>@localizer["Kategori"]: </b>@item.FilmKategorisi</p>
                            <p class="card-text rounded" style="background-color: whitesmoke;"><b>@localizer["Sinema"]: </b>@item.Sinema.SinemaAdi</p>
                            <p class="card-text rounded" style="background-color:whitesmoke;">
                                <b>@localizer["SeansSeciniz"]: </b>
                                <select name="saat" id="saat" style="height: 44px; border: none; overflow: hidden; background-color: whitesmoke;">
                                    <option class="btn btn-outline-info mb-1 card-text" value="bir">@item.FilmBaslamaSaati1</option>
                                    <option class="btn btn-outline-info mb-1 card-text" value="iki">@item.FilmBaslamaSaati2</option>
                                    <option class="btn btn-outline-info card-text" value="uc">@item.FilmBaslamaSaati3</option>
                                </select>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <img src="@item.FilmFotografi" asp-append-version="true" style="width:100%; height:100%">
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer">
                            <p class="card-text">
                                <a class="btn btn-outline-secondary float-right" asp-action="Details" asp-route-id="@item.FilmId">
                                    @localizer["DahaFazla"]
                                </a>
                                <a asp-controller="Siparis" asp-action="SepeteEkleArtir" asp-route-id="@item.FilmId" class="btn btn-dark text-white">
                                    @localizer["BiletAl"] @item.FilmUcreti TL
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>











